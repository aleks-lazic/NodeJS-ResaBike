extends layoutIndex

block content
  
  //- First Section - Just display logo, etc.
  div(id="index-banner" class="parallax-container")
    div(class="section no-pad-bot")
      div(class="container")
        br
        h1(class="header center teal-text text-yellow accent-2") Resabike
        div(class="row center")
          h5(class="header col s12 light") fuck
          //- #{lang.bannerText}
        div(class="row center")
          a(class="scroll" href="#contact" id="contact-button" class="btn waves-effect waves-light teal lighten-1") Fuck
          //- #{lang.bannerContact}
        br
    div(class="parallax")
      img(src="../images/wallpaper-bike1.jpg" alt="Unsplashed background img 1")

  //- Second Section - SEARCH WITH API !
  div(id="search" class="container" style="padding-top:80px; padding-bottom:80px;")
    h3.center-align FUCK
      //- #{lang.searchTitle}
      div.row
        form(class="col s12" action="/book" method="post")
          div.row
            div.input-field.col.s6
              //- NEED TO REMOVE THE VALUES AFTER
              input(type="text" value="Sierre, poste/gare" placeholder="FROM", autofocus, name="departureFrom" id="departureFrom" class="autocomplete" autocomplete="off" required)
              //- `${lang.searchFromStation}`
            div.input-field.col.s6
              input(type="text" value="Les Pontis" placeholder="TO", name="arrivalTo" id="arrivalTo" class="autocomplete" autocomplete="off" required)
              //- `${lang.searchToDest}`
            div.input-field.col.s6
              input(type="date" id="datepicker" placeholder="FUCK" name="dateTravel" class="datepicker" required)
              //- `${lang.searchDate}`
              br
              input(type="number" value="1" id="nbBike" name="nbBike" min="1" max="20" placeholder="NBBIKE")
              //- `${lang.searchNbBike}`
            div.input-field.col.s6
              button(class="btn waves-effect waves-light" type="submit" name="action") FUCK
                //- #{lang.searchSubmit}
                i(class="material-icons right") send
  
  //- Third Section - About Us ?
  div(id="aboutus" class="parallax-container valign-wrapper")
    //- div.section.no-pad-bot
    div.container
      h3(class="header center teal-text text-yellow accent-2") FUCK
      //- #{lang.aboutTitle}
      div(class="row center")
        h5(class="header col s12 light") FUCK
        //- #{lang.aboutText1}
        br
        h5(class="header col s12 light") FUCK
        //- #{lang.aboutText2}
    div.parallax
      img(src='../images/wallpaper-index-bus1.jpg', alt='Unsplashed background img 2')

  //- Fourth Section - Contact Form
  div(id="contact" class="container" style="padding-top:80px; padding-bottom:80px;")
    div.section
      div.row
        div.col.s12.center
          h3.center-align FUCK
          //- #{lang.contactTitle}
          div(class="row")
            div(class="input-field col s6")
              form(method="post" action="/sendMail")
                input(id="name_mail" name="name_mail" type="text" class="validate" placeholder="FUCK" required="" aria-required="true")
                //- `${lang.contactName}`
                br
                input(id="name_email" name="email_mail" type="text" class="validate" placeholder="Email" required="" aria-required="true")
                br
                input(id="subject_mail" name="subject_mail" type="text" class="validate" placeholder="FUCK" required="" aria-required="true")
                //- `${lang.contactSubject}`
                br
                textarea(id="message_mail" name="message_mail" type="text" class="validate" placeholder="FUCK" class="materialize-textarea" required="" aria-required="true")
                //- `${lang.contactMessage}`
                br
                button(class="btn waves-effect waves-light" type="submit" name="submit_button" id="submit_button" style="margin-top:50px" disabled="disabled") FUVCK
                  //- #{lang.contactSendMessage}
                  i(class="material-icons right") send
                p *FUCK
                //- #{lang.contactMsg}

            div(class="input-field col s6")
              i(class="material-icons prefix") phone
              input(id="phone_number" value="+27 481 00 00" class="validate" disabled)
              br
              i(class="material-icons prefix") map
              input(id="" value="Suisse, Valais, Sierre - HES-SO" class="validate" disabled)

  footer(class="page-footer")
    div(class="footer-copyright")
      div(class="container")
        p Â© 2017 Copyright Kevin Schmidt, Aleksandar Lazic
        a(class="lang" href="/fr") FRENCH FUCK
        //- #{lang.french}
        br
        a(class="lang" href="/de") GERMAN FUCK
        //- #{lang.german}
        br
        a(class="lang" href="/en") ENGLISH FUCK
        //- #{lang.english}
  
  script(src="javascripts/contactForm.js", type="text/javascript")