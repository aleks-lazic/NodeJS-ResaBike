extends layoutUser

block content
    h1= "User xxxxxx's zones"

    table(id="zonesTable" class="responsive-table")
        tr
            th Name
            th= Details
            th Number reservations to confirm
        each x, index in zones
            tr
                td= x.name
                td
                    a(type="button", class="btn waves-effect waves-light", onclick=``) Details
                if(x.books != null)
                    td(style="color: red") #{x.books.length}
                else
                    td 0


        




