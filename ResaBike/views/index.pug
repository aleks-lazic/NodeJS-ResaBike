extends layoutIndex

block content
  
  //- First Section - Just display logo, etc.
  div(id="index-banner" class="parallax-container")
    div(class="section no-pad-bot")
      div(class="container")
        br
        h1(class="header center teal-text") Resabike
        div(class="row center")
          h5(class="header col s12 light")  #{lang.bannerText}
        div(class="row center")
          a(class="scroll" href="#contact" id="contact-button" class="btn waves-effect waves-light teal lighten-1")  #{lang.bannerContact}
        br
    div(class="parallax")
      img(src="../images/wallpaper-bike1.jpg" alt="Unsplashed background img 1")

  //- Second Section - SEARCH WITH API !
  div(id="search" class="container" style="padding-top:80px; padding-bottom:80px;")
    h3.center-align  #{lang.searchTitle}
      div.row
        form(class="col s12" action="/"+langUsed+"/book" method="post")
          div.row
            div.input-field.col.s6
              input(type="text" value="Sierre, poste/gare" placeholder=`${lang.searchFromStation}`, autofocus, name="departureFrom" id="departureFrom" class="autocomplete" autocomplete="off" required)
            div.input-field.col.s6
              input(type="text" value="Les Pontis" placeholder=`${lang.searchToDest}`, name="arrivalTo" id="arrivalTo" class="autocomplete" autocomplete="off" required)
            div.input-field.col.s6
              input(type="date" id="datepicker" placeholder=`${lang.searchDate}` name="dateTravel" class="datepicker" required)
            div.input-field.col.s6
              input(type="text" id="timepicker" name="hourDep" placeholder=`${lang.searchTime}` class="timepicker")
            div.input-field.col.s6
              input(type="number" value="1" id="nbBike" name="nbBike" min="1" max="20" placeholder=`${lang.searchNbBike}`)
            div.input-field.col.s6
              button(class="btn waves-effect waves-light" type="submit" name="action") #{lang.searchSubmit}
                i(class="material-icons right") send
  
  //- Third Section - About Us ?
  div(id="aboutus" class="parallax-container valign-wrapper")
    //- div.section.no-pad-bot
    div.container
      h3(class="header center teal-text text-yellow accent-2") #{lang.aboutTitle}
      div(class="row center")
        h5(class="header col s12 light") #{lang.aboutText1}
        br
        h5(class="header col s12 light")  #{lang.aboutText2}
    div.parallax
      img(src='../images/wallpaper-index-bus1.jpg', alt='Unsplashed background img 2')

  //- Fourth Section - Contact Form
  div(id="contact" class="container" style="padding-top:80px; padding-bottom:80px;")
    div.section
      div.row
        div.col.s12.center
          h3.center-align  #{lang.contactTitle}
          div(class="row")
            div(class="input-field col s6")
              form(method="post" action="/"+langUsed+"/sendMail")
                input(id="name_mail" name="name_mail" type="text" class="validate" placeholder=`${lang.contactName}` required="" aria-required="true")
                br
                input(id="name_email" name="email_mail" type="text" class="validate" placeholder="Email" required="" aria-required="true")
                br
                input(id="subject_mail" name="subject_mail" type="text" class="validate" placeholder=`${lang.contactSubject}` required="" aria-required="true")
                br
                textarea(id="message_mail" name="message_mail" type="text" class="validate" placeholder=`${lang.contactMessage}` class="materialize-textarea" required="" aria-required="true")
                br
                button(class="btn waves-effect waves-light" type="submit" name="submit_button" id="submit_button" style="margin-top:50px" disabled="disabled") #{lang.contactSendMessage}
                  i(class="material-icons right") send
                p *#{lang.contactMsg}

            div(class="input-field col s6")
              i(class="material-icons prefix") phone
              input(id="phone_number" value="+27 481 00 00" class="validate" disabled)
              br
              i(class="material-icons prefix") map
              input(id="" value="Suisse, Valais, Sierre - HES-SO" class="validate" disabled)

  footer(class="page-footer")
    div(class="footer-copyright")
      div(class="container")
        p Â© 2017 Copyright Kevin Schmidt, Aleksandar Lazic
        a(class="lang" href="/fr") #{lang.french}
        br
        a(class="lang" href="/de") #{lang.german}
        br
        a(class="lang" href="/en") #{lang.english}
  
  script(src="javascripts/contactForm.js", type="text/javascript")